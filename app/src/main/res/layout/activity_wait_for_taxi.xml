<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layoutDirection="rtl"
    android:background="@drawable/background_seat"
    android:layout_height="match_parent"
    tools:context=".waitForTaxi">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/warrperContext"
            android:layout_margin="20dp"
            android:padding="16dp"
            android:orientation="vertical"
            android:background="@drawable/white_curved_bknd"
            app:layout_constraintBottom_toTopOf="@+id/freeSeat"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">

                <TextView
                    android:id="@+id/myLoction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:text="מיקום נוכחי: קריות" />

                <TextView
                    android:id="@+id/dest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:layout_gravity="right"
                    android:text="היעד שלי: עכו" />

                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="זמן להגעה: 20 דקות" />

                <TextView
                    android:id="@+id/passengerCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="מספר נוסעים: 4" />

        </LinearLayout>


        <ImageView
            android:id="@+id/freeSeat"
            android:layout_width="234dp"
            android:layout_height="400dp"
            android:background="@drawable/seat"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>


</android.support.constraint.ConstraintLayout>